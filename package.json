{
  "name": "atsevofni",
  "version": "1.0.0",
  "description": "Monorepo holding the frontend and backend apps of Atsevofni",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:web\" \"pnpm:dev:server\"",
    "start": "concurrently \"pnpm:preview:web\" \"pnpm:run:server\"",
    "install:app": "concurrently \"pnpm:install:server\" \"pnpm install\"",
    "install:server": "cd apps/server && uv venv && uv sync",
    "format:app": "concurrently \"pnpm:format:web\" \"pnpm:format:server\"",
    "dev:web": "pnpm --filter @atsevofni/web dev",
    "build:web": "pnpm --filter @atsevofni/web build",
    "preview:web": "pnpm --filter @atsevofni/web preview",
    "format:web": "pnpm --filter @atsevofni/web format",
    "lint:web": "pnpm --filter @atsevofni/web lint",
    "dev:server": "cd apps/server && uv run fastapi dev src/main.py",
    "run:server": "cd apps/server && uv run fastapi run src/main.py --port 8000",
    "format:server": "cd apps/server && uv run ruff format",
    "check:server": "cd apps/server && uv run ruff check",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "apps/server/src/**/*.py": [
      "format:server",
      "check:server --fix"
    ],
    "apps/web/src/**/*.{js,jsx,ts,tsx,json,css}": [
      "format:web --write --ignore-unknown",
      "lint:web --quiet --fix"
    ]
  },
  "author": "Muhammad Afief Abdurrahman",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "concurrently": "^9.2.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  }
}
